<%- //include('../partials/header') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/stylesheets/style.css" rel="stylesheet">
    <title>Document</title>
</head>
  <body>
<div class='container'>  
  <table id='list'>
    <h1>FLIGHT LIST</h1>
    <div class='title'>
    <thead>
        <th>Airline</th><br><br>
        <th>Flight No.</th>
        <th>Origin</th>
        <th>Departure Date</th>
        <th>In Air</th>
      </tr>
    </thead>
    </div>
    <br>
    <tbody>
      <% flights.forEach(function(f) { %>
        <tr>
          <td><%= f.airline %></td>
          <td><%= f.flightNo %></td>
          <td><%= f.origin %></td>
          <td><%= f.departs %></td>
          <td><%= f.onAir ? 'Yes' : 'No' %></td>    
          <td><a href="/flights/<%= f._id %>">Details</a></td>
          <td>
            <form action="/flights/<%= f._id %>?_method=DELETE" method="POST">
            <button type="submit">X</button>
            </form>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <div class='addFlight'>
    <a href="/flights/new">Add a Flight</a> 
  </div>
</div> 
    <script src="" async defer></script>
</body>
</html>