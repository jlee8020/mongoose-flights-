<!DOCTYPE html>
<html lang="en">
  <table id='list'>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Flight No.</th>
        <th>Departure Date</th>
        <th>Now onAir</th>
      </tr>
    </thead>
    <tbody>
      <% flights.forEach(function(f) { %>
        <tr>
          <td><%= f.airline %></td>
          <td><%= f.flightNo %></td>
          <td><%= f.departs %></td>
          <td><%= f.onAir ? 'Yes' : 'No' %></td>    
          <td><a href="/flights/<%= f._id %>">Details</a></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <a href="/flights/new">Add a Flight</a>
</body>
</html>