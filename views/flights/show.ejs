<%- //include('../partials/header') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/stylesheets/style.css" rel="stylesheet">
    <title>Document</title>
</head>
<body>
<div class='container3'>
  <section id="show-page">
    <h2>Flight Details</h2><br>
    <div>Airline: </div>
    <div><%= flights.airline %></div><br>
    <div>Flight No: </div>
    <div><%= flights.flightNo %></div><br>
    <div>Origin: </div>
    <div><%= flights.origin %></div><br>
    <div>Departure Date: </div>
    <div><%= flights.departs %></div><br>
    <div>In Air: </div>
    <div><%= flights.onAir ? 'Yes' : 'No' %></div>
  </section>
  <div>
  <form id="add-destination" method="POST"
  action ="/flights/<%= flights._id %>/destinations">

  <label>Destination Airport:</label>
  <select name="destination">
  <option value="AUS">AUS</option>
  <option value="DFW">DFW</option>
  <option value="DEN">DEN</option>
  <option value="LAX">LAX</option>
  <option value="SFO">SFO</option>
  </select>
  <label>Arrival Time:
  <input type="datetime-local" id="arrival-date" name="arrives"
              name="arrival-date" value="2020-02-12T19:30"
              min="2019-01-01T00:00" max="2020-12-31T00:00">
  </label>
  <input type="submit" value="Add Destination">
</form>
</div>
<br>
<div>
<a href='/flights/<%= flights._id %>/tickets/new/'>Add Ticket</a>
</div>
<div>
<h2>Ticket Info</h2>
<% if(tickets.length) { %>
<% tickets.forEach(function(t) { %>
<br>
<td>Seat: <%= t.seat %><td>
<td>Price: $<%= t.price %><td>
  <form action="/flights/<%= flights._id %>/tickets/<%= t._id %>?_method=DELETE" method="POST"><button>X</button>
  </form>
  </td>
<td>
</div>
<% })}; %>
<div>
<br><h2>Arrival Info</h2>
</div>
        <div>
        <table>
          <thead>
            <tr>
              <th>Destination</th>
              <th>Arrival Date</th>
              </tr>
          </thead>
          <br>
          <div>
          <tbody>
            <% if(flights.destinations.length) { %>
            <% flights.destinations.forEach(function(f) { %>
              <tr>
                <td><%= f.destination %></td>
                <td><%= f.arrives %></td>
              </tr>
            <% })}; %>
          </tbody>
          </div>
          </table>
          </div>
</div>
</div>
<script src="" async defer></script>
</body>
</html>
